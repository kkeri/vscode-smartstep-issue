	"version": "0.2.0",
	"configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "launch with smartstep",
      "program": "${file}",
      "sourceMaps": true,
      "outFiles": [ "${workspaceRoot}/lib/*.js" ],
      "smartStep": true,
      "trace": "all"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "launch without smartstep",
      "program": "${file}",
      "sourceMaps": true,
      "outFiles": [ "${workspaceRoot}/lib/*.js" ],
      "smartStep": false,
      "trace": "all"
    }
	]
}